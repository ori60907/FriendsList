<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.fundamentals.academy.ori.friendslist.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:paddingStart="@dimen/basic_friend_padding"
        android:textSize="@dimen/basic_friend_text_size"
        android:id="@+id/friend_name_tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="@dimen/basic_friend_padding"
        android:textSize="@dimen/basic_friend_text_size"
        android:id="@+id/friend_funfact_tv"/>

</RelativeLayout>